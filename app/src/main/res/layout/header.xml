<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@drawable/materialbg">


        <ImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_launcher"
                android:layout_margin="5dp"
                android:gravity="center_vertical"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="@dimen/abc_text_size_subtitle_material_toolbar"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/headeruser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/abc_text_size_title_material_toolbar"
                    />
            <TextView
                    android:id="@+id/headermail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                    />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>