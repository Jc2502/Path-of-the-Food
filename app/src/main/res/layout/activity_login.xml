<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context="com.pathofthefood.flyingburger.Login"
    android:id="@+id/login"
    android:weightSum="1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/ic_poflogo"
        android:id="@+id/login_logo"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/logo_description" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/login_form_background"
        >
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/holo_orange_dark"
                android:hint="Usuario"
                android:padding="10dp"
                android:id="@+id/userText"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/holo_orange_dark"
                android:padding="10dp"
                android:password="true"
                android:hint="ContraseÃ±a"
                android:id="@+id/passwordText"
                />
        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:weightSum="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:textAlignment="center"
                android:id="@+id/loginButton"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@color/primary_pressed"
                android:layout_centerHorizontal="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrate"
                android:textAlignment="center"
                android:id="@+id/textViewRegistro"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@color/primary_pressed"
                android:layout_centerHorizontal="true"/>
            </LinearLayout>

</LinearLayout>