<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context="com.pathofthefood.flyingburger.Login"
    android:id="@+id/login"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:weightSum="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:src="@drawable/ic_poflogo"
            android:id="@+id/login_logo"
            android:layout_weight="0.7"
            android:contentDescription="@string/logo_description" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:paddingTop="@dimen/abc_text_size_medium_material"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:text="Registrate"
                android:textStyle="bold"
                android:textColor="@color/register_background"
                android:textSize="@dimen/abc_text_size_large_material"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y evitate esa frustraci칩n"
                android:textStyle="normal"
                android:textColor="@color/register_background"
                android:textSize="@dimen/abc_text_size_medium_material"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/login_form_background"
        >

        <LinearLayout
            android:id="@+id/register_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/login_button"
                android:textColor="@android:color/holo_orange_dark"
                android:hint="Nombre de Usuario"
                android:padding="10dp"
                android:background="@color/register_background"
                android:id="@+id/editTextUSR"
                android:layout_centerHorizontal="true"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/login_button"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHint="@color/login_button"
                android:textColor="@android:color/holo_orange_dark"
                android:padding="10dp"
                android:background="@color/register_background"
                android:password="true"
                android:hint="Contrase침a"
                android:id="@+id/editTextPWD"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/login_button"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHint="@color/login_button"
                android:textColor="@android:color/holo_orange_dark"
                android:hint="Confirmar Contrase침a"
                android:padding="10dp"
                android:background="@color/register_background"
                android:id="@+id/editTextPWD2"
                android:layout_centerHorizontal="true"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/login_button"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/login_button"
                android:textColor="@android:color/holo_orange_dark"
                android:padding="10dp"
                android:background="@color/register_background"
                android:hint="Correo Electr칩nico"
                android:id="@+id/editTextEA"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/login_button"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColorHint="@color/login_button"
                android:textColor="@android:color/holo_orange_dark"
                android:hint="Telefono"
                android:padding="10dp"
                android:background="@color/register_background"
                android:id="@+id/editTextPN"
                android:layout_centerHorizontal="true"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/login_button"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColorHint="@color/login_button"
                android:textColor="@android:color/holo_orange_dark"
                android:padding="10dp"
                android:background="@color/register_background"
                android:hint="Nombre"
                android:id="@+id/editTextFN"
                />
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/login_button"/>
            <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genero"
                    android:padding="10dp"
                    android:textOn="M"
                    android:textOff="F"
                    android:thumb="@drawable/switch_thumb"
                    android:id="@+id/switchGenero"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/login_button"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:textColorHint="@color/login_button"
                    android:textColor="@android:color/holo_orange_dark"
                    android:padding="10dp"
                    android:hint="Fecha de Nacimiento  199X-00-00"
                    android:id="@+id/editDate"/>


        </LinearLayout>
        </ScrollView>

    <com.gc.materialdesign.views.ButtonRectangle
        android:text="Registrate"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/buttonRegistro"
        android:textColor="@color/register_background"
        android:background="#01283C"
        android:layout_centerHorizontal="true"
        />

</LinearLayout>